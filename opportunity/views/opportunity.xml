<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="opportunity_list">
            <field name="name">opportunity_list</field>
            <field name="model">opportunity.opportunity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="subject_name" string="subject_name"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="opportunity.action_window">
            <field name="name">opportunity</field>
            <field name="res_model">opportunity.opportunity</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>



