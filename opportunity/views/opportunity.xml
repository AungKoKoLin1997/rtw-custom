<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="opportunity_stage_list">
            <field name="name">opportunity_stage_list</field>
            <field name="model">opportunity_stage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="subject"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="action_opportunity_tree" model="ir.actions.act_window">
            <field name="name">opportunity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">opportunity_stage</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" ref="opportunity_stage_list" />
        </record>

